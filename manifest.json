{
  "manifest_version": 3,
  "name": "Zetamac TTS",
  "version": "1.0",
  "description": "Reads math problems on Zetamac aloud using text-to-speech.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["https://arithmetic.zetamac.com/*"],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://arithmetic.zetamac.com/*"],
      "js": [
        "src/modules/tts-manager.js",
        "src/modules/storage-manager.js",
        "src/modules/ui-manager.js",
        "src/modules/equation-reader.js",
        "src/content/content.js"
      ]
    }
  ]
}
